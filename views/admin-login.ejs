<%- include("partials/header", { title: "Admin Login" }) %>
<style>
    .center-div {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh; /* Use 100% of the viewport height */
    }
    
    .custom-card {
      width: 350px; /* Adjust card width */
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 0 20px rgba(0, 0, 0, 0.1); /* Soft shadow effect */
    }

    .custom-card h2 {
      font-size: 3rem; /* Larger font size for heading */
      text-align: center;
      margin-bottom: 20px;
    }

    /* Custom style for form inputs */
    .custom-card .form-control {
      font-size: 2rem; /* Increase font size of form inputs */
      padding: 0.5rem 1rem; /* Increase padding for better spacing */
      text-transform: none;
    }

    .custom {
        font-size: 2rem;
    }

</style>

<section class="admin-login main-content" id="admin-login">
    <div class="center-div">
        <form action="/login" class="custom-card bg-light" method="post">
            <h2>Admin Login</h2>
            <div class="form-group">
                <label class="custom" for="username">Username</label>
                <input type="text" class="form-control" id="username" name="username" autocapitalize="none">
            </div>
            <div class="form-group">
                <label class="custom" for="password">Password</label>
                <input type="password" class="form-control" id="password" name="password" autocapitalize="none">
            </div>
            <button type="submit" class="btn btn-primary btn-block">Login</button>
        </form>
    </div>
</section>

<%- include("partials/footer") %>